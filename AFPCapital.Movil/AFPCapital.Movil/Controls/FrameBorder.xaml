<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="AFPCapital.Movil.Controls.FrameBorder"
    Padding="1" 
    BackgroundColor="#008C8D">
  <ContentView.Content>
        <StackLayout Padding="0">
            <StackLayout Padding="10">
                <Label x:Name="label" Text="{Binding Title}" TextColor="White" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"></Label>
            </StackLayout>
            <StackLayout x:Name="stackLayoutContent" Padding="0" BackgroundColor = "White">

            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>
